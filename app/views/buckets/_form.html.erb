<%= form_for @bucket do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br /><br />
    <%= f.label :description %><br />
    <%= f.text_area :description %><br /><br />
    <%= f.label :status %>
    <%= f.select :status, ["Not Start", "In Progress", "Finished"], prompt: "Please select" %>
    <br /><br />
    <%= f.label "Quantity of Tasks" %>
    <%= f.number_field :quantity %>
    <br /><br />
    <%= f.label "Create a task" %><br>
    <%= f.fields_for :tasks do |t| %>
      <%= t.label :name %>
      <%= t.text_field :name %>
      <br>
      <%= t.label :description %>
      <%= t.text_field :description %>
      <br>
      <%= t.label :status %>
      <%= t.select :status, ["Not Start", "In Progress", "Finished"], prompt: "Please select" %>
    <%end%>  
      <br><br>
    <%= f.submit %>
  
  <%end%>    